# ===================================
# AI on Blockchain - Environment Configuration
# ===================================
# Copy this file to .env and fill in your actual values

# Application
ENV=development
DEBUG=True
API_HOST=0.0.0.0
API_PORT=8000

# Blockchain Configuration
BLOCKCHAIN_PROVIDER=http://localhost:8545
BLOCKCHAIN_NETWORK=local
ETHEREUM_MAINNET_RPC=
POLYGON_RPC=
ARBITRUM_RPC=

# Private Keys (NEVER commit actual keys)
DEPLOYER_PRIVATE_KEY=your_private_key_here
VALIDATOR_PRIVATE_KEY=your_validator_key_here

# Smart Contract Addresses (fill after deployment)
AI_MODEL_REGISTRY_ADDRESS=
AUDIT_TRAIL_ADDRESS=
DATA_MARKETPLACE_ADDRESS=
FRAUD_DETECTION_ADDRESS=

# LLM API Keys
OPENAI_API_KEY=your_openai_api_key
OPENAI_ORG_ID=your_openai_org_id
ANTHROPIC_API_KEY=your_anthropic_api_key
HUGGINGFACE_API_KEY=your_huggingface_api_key
COHERE_API_KEY=your_cohere_api_key

# Vector Database Configuration
CHROMA_DB_PATH=./chroma_db
PINECONE_API_KEY=your_pinecone_api_key
PINECONE_ENVIRONMENT=us-west1-gcp
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=

# IPFS Configuration
IPFS_API_URL=http://localhost:5001
IPFS_GATEWAY_URL=https://ipfs.io/ipfs/
PINATA_API_KEY=
PINATA_SECRET_KEY=

# Database Configuration
MONGODB_URL=mongodb://localhost:27017
MONGODB_DB_NAME=ai_blockchain
REDIS_URL=redis://localhost:6379
POSTGRES_URL=postgresql://user:password@localhost:5432/ai_blockchain

# MLOps Configuration
MLFLOW_TRACKING_URI=http://localhost:5000
WANDB_API_KEY=your_wandb_api_key
WANDB_PROJECT=ai-on-blockchain

# Ray Configuration
RAY_ADDRESS=auto
RAY_DASHBOARD_PORT=8265

# Security
SECRET_KEY=your_secret_key_min_32_characters_long
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Monitoring & Logging
SENTRY_DSN=
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
LOG_LEVEL=INFO

# Model Serving
MODEL_CACHE_DIR=./ml_models
MODEL_SERVING_PORT=8080
TORCHSERVE_PORT=8081

# Federated Learning
FL_SERVER_HOST=0.0.0.0
FL_SERVER_PORT=8080
FL_MIN_CLIENTS=2
FL_ROUNDS=10

# Oracle Configuration (for off-chain data)
CHAINLINK_NODE_URL=
ORACLE_JOB_ID=

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# Frontend Configuration
STREAMLIT_PORT=8501
FRONTEND_URL=http://localhost:8501

# Testing
TEST_ETHEREUM_RPC=http://localhost:8545
TEST_PRIVATE_KEY=0xac0974bec39a17e36ba4a6b4d238ff944bacb478cbed5efcae784d7bf4f2ff80

# Production Settings (uncomment for production)
# ENV=production
# DEBUG=False
# ALLOWED_HOSTS=yourdomain.com
# CORS_ORIGINS=https://yourdomain.com

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Cache Configuration
CACHE_TTL=3600
CACHE_BACKEND=redis

# AWS Configuration (if using AWS services)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
S3_BUCKET_NAME=

# Docker Configuration
DOCKER_REGISTRY=
DOCKER_IMAGE_TAG=latest
